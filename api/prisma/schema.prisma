// Prisma schema file defining the database models and relations
// generator configuration for Prisma Client
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

// MongoDB datasource configuration
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// user model representing application users
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  // posts     Post[]
  // savedPosts SavedPost[]
  // chats      Chat[]      @relation(fields: [chatIDs], references: [id])
  // chatIDs    String[]    @db.ObjectId
  isAdmin   Boolean  @default(false)

  //added 
  level     Int      @default(0)
  courses   Course[]  @relation(fields: [courseIDs], references: [id])
  courseIDs String[]  @db.ObjectId

  timetable String[] @default([]) 
  MyTasks   MyTask[]  

}

model MyTask {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String
  user        User     @relation(fields: [userID], references: [id])
  userID    String   @db.ObjectId

  createdAt DateTime @default(now())
  isCompleted Boolean @default(false)
}

model Task {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String
  courses   Course[]  @relation(fields: [courseIDs], references: [id])
  courseIDs String[]  @db.ObjectId
  createdAt DateTime @default(now())
  isCompleted Boolean @default(false)
}

model Course {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String
  users     User[]   @relation(fields: [userIDs], references: [id])
  userIDs   String[] @db.ObjectId
  createdAt DateTime @default(now())
  comments  String[] @default([])
  materials  Material[] @relation(fields: [materialIDs], references: [id])
  materialIDs String[] @db.ObjectId
  tasks     Task[]   @relation(fields: [taskIDs], references: [id])
  taskIDs   String[] @db.ObjectId
  announcements Announcement[]
  lectures  Lecture[]
  exams     Exams[]
  labs      Labs[]
  sheets    Sheets[]
  references References[]
}

model Material {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String
  createdAt DateTime @default(now())
  Courses Course[] @relation(fields: [courseIDs], references: [id])
  courseIDs String[] @db.ObjectId
}

model Announcement {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  createdAt DateTime @default(now())
  course   Course  @relation(fields: [courseIDs], references: [id])
  courseIDs String  @db.ObjectId
}

model Lecture {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  slidesUrl  String
  videoUrl  String?
  createdAt DateTime @default(now())
  course   Course  @relation(fields: [courseIDs], references: [id])
  courseIDs String  @db.ObjectId
}

model Exams {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  examUrl   String
  date      DateTime
  course   Course  @relation(fields: [courseIDs], references: [id])
  courseIDs String  @db.ObjectId
}

model Labs{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  labUrl    String
  createdAt DateTime @default(now())
  course   Course  @relation(fields: [courseIDs], references: [id])
  courseIDs String  @db.ObjectId
}

model Sheets{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  sheetUrl   String
  createdAt DateTime @default(now())
  course   Course  @relation(fields: [courseIDs], references: [id])
  courseIDs String  @db.ObjectId
}

model References{
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  description String
  referenceurl       String
  course   Course  @relation(fields: [courseIDs], references: [id])
  courseIDs String  @db.ObjectId
}


